{
  "name": "frontend-root",
  "private": true,
  "scripts": {
    "start:admin": "lerna run --scope admin start",
    "start:native": "lerna run --scope core-native start",
    "start:pwa": "lerna run --scope core-pwa start",
    "build": "lerna run build",
    "build:admin": "lerna run --scope admin build",
    "build:native": "lerna run --scope native build",
    "build:pwa": "lerna run --scope pwa build",
    "build:core-api-client": "lerna run --scope core-api-client build",
    "build:core-auth": "lerna run --scope core-auth build",
    "build:design-system": "lerna run --scope core-design-system build",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "test:stable": "lerna run --scope core-native --scope core-auth test"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "storybook"
  ],
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}
