{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom","esnext"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@core/*": ["apps/*", "libs/*"]
    },
    "jsx": "react",
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "exclude": ["**/dist/*", "**/__test__/*"]
}
