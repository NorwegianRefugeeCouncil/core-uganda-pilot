{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "target": "ES6",
    "lib": [
      "DOM",
      "ESNext",
      "ES2015"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/*.ts"
    ],
    "declaration": true,
    "outDir": "lib",
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.js"
  ]
}
