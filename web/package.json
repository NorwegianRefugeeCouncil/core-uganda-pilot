{
  "name": "@core/web",
  "description": "Web applications and libraries for NRC Core",
  "author": "Norwegian Refugee Council",
  "license": "Apache-2.0",
  "packageManager": "yarn@3.2.0-rc.5",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "devDependencies": {
    "@yarnpkg/esbuild-plugin-pnp": "^2.0.0",
    "esbuild": "^0.13.15",
    "typescript": "^4.5.2"
  },
  "scripts": {
    "reset": "rm -rf **/node_modules **/yarn.lock",
    "clean": "node ./scripts/clean.js",
    "build": "node ./scripts/build.js",
    "start:pwa": "yarn workspace @core/pwa start",
    "test:pwa": "yarn workspace @core/pwa start",
    "start:intake-app": "yarn workspace @core/intake-app start",
    "test:intake-app": "yarn workspace @core/intake-app test",
    "start:admin": "yarn workspace @core/admin start",
    "start:storybook": "yarn workspace @core/storybook storybook",
    "test:admin": "yarn workspace @core/admin test",
    "test:api-client": "yarn workspace @core/api-client test",
    "test:auth-client": "yarn workspace @core/auth-client test"
  },
  "resolutions": {
    "ua-parser-js": "^0.7.30"
  }
}
