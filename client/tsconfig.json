{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "skipLibCheck": true,
    "target": "ES6",
    "rootDir": "src",
    "outDir": "lib"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
