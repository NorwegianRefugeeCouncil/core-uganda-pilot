{{define "radio"}}
    <h5>{{.Label.ForLocale "en"}}</h5>
    <div class="form-text">{{if .Description}}{{.Description.ForLocale "en"}}{{end}}</div>
    <div id="{{.Name}}"
         aria-describedby="{{.Name}}Feedback">
        {{range $i, $option := .CheckboxOptions}}
            {{$fieldName := (printf "%s[%s]" $.Name $i)}}
            <div class="form-check mb-3">
                <label class="form-check-label mb-2 text-muted" style="font-weight: bold;"
                       for="{{$fieldName}}">{{$option.Label.ForLocale "en"}}</label>
                <input id="{{$fieldName}}"
                       name="{{$.Name}}"
                       value="{{$option.Value}}"
                       class="form-check-input"
                       type="radio"
                       data-testid="test-radio"
                       {{if $option.Required}}required{{end}}
                        {{range $v := $.Value}}{{if eq $option.Value $v}}checked{{end}}{{end}}
                        {{if $.Readonly}}disabled{{end}}
                >
            </div>
        {{end}}
    </div>
    <div id="{{.Name}}Feedback" class="invalid-feedback mb-3">
        Please pick at least one option.
    </div>
{{end}}
