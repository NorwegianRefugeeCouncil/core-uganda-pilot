root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_style = tab
trim_trailing_whitespace = false

[*.{js,jsx,ts,tsx,css,less,sass,scss,vue,py}]
indent_style = space
indent_size = 4

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.go,Makefile,go.mod,go.sum}]
indent_style = tab

[{*.htm,*.html,*.sht,*.shtm,*.shtml}]
indent_size = 2
tab_width = 2

[*.{yml,yaml,json}]
indent_style = space
indent_size = 2
